{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/telegram/**",
    "src/cloud/**",
    "src/federation/**",
    "src/license/**",
    "src/cli/**",
    "src/tests/**",
    "src/scripts/**",
    "src/main.ts",
    "src/api/**",
    "src/integration/**",
    "src/retrieval/vector-search.ts",
    "src/retrieval/embeddings.ts",
    "src/retrieval/agentic-retrieval.ts",
    "src/retrieval/multihop-chain.ts",
    "src/retrieval/hybrid-retrieval.ts"
  ]
}
