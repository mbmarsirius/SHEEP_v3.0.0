{
  "name": "sheep-ai-core",
  "version": "1.0.0",
  "description": "Cognitive memory system for AI agents. Extracts facts and causal relationships, consolidates during sleep cycles, recalls with reasoning.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "proof": "npx tsx src/scripts/proof-test.ts",
    "proof:full": "SHEEP_PROOF_LIMIT=55 npx tsx src/scripts/proof-test.ts",
    "proof:recall": "npx tsx src/scripts/proof-recall.ts"
  },
  "keywords": [
    "ai",
    "memory",
    "cognitive",
    "causal-reasoning",
    "episodic-memory",
    "semantic-memory",
    "llm",
    "agent",
    "fact-extraction"
  ],
  "author": "Marsirius AI Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sheep-ai/core"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@google/generative-ai": "^0.24.1",
    "@sinclair/typebox": "^0.34.0",
    "openai": "^6.20.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}