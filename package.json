{
  "name": "sheep-ai",
  "version": "0.3.0",
  "description": "SHEEP AI - Sleep-based Hierarchical Emergent Entity Protocol. Cognitive memory system with causal reasoning, topic clustering, and predictive recall.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "validate": "tsc && node dist/scripts/self-validate.js",
    "validate:dev": "npx tsx src/scripts/self-validate.ts",
    "start": "npx tsx src/main.ts",
    "start:prod": "tsc && node dist/main.js",
    "bot": "npx tsx src/main.ts"
  },
  "keywords": [
    "ai",
    "memory",
    "cognitive",
    "causal-reasoning",
    "episodic-memory",
    "semantic-memory",
    "clustering",
    "llm"
  ],
  "author": "Marsirius AI Labs",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@google/generative-ai": "^0.24.1",
    "@sinclair/typebox": "^0.34.0",
    "express": "^5.2.1",
    "grammy": "^1.40.0",
    "openai": "^6.20.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
